<a id="moments"></a>
<section id="welcome-index-moments-leader" class="jumbotron text-center">
  <div class="container">
  <h1>Moments</h1>
  </div>
</section>

<section id="welcome-index-moments">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">

      <h2><a id="gallery">Gallery</a></h2>
          
      <!-- For blueimp gallery -->
      <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-contain">
        <div class="slides" style="color:white"></div>
        <h3 class="title" style="color:white"></h3>
        <a class="prev" style="color:white">&lsaquo;</a>
        <a class="next" style="color:white">&rsaquo;</a>
        <a class="close" style="color:white">&times;</a>
        <a class="play-pause" style="color:white"></a>
        <ol class="indicator" style="color:white"></ol>
      </div>

      <div class="gallery" id="links">
        <% Dir.glob('app/assets/images/moments/thumbnails/*').map do |path| %>
          <%= link_to image_tag("moments/thumbnails/#{ File.basename(path) }", :alt => "", height: '20%', width: '20%'), image_url("moments/#{ File.basename(path) }") -%>
        <% end.reduce(&:+) %>
      </div>

      <!-- <h2><a id="gallery_info">Info</a></h2>
      Please come back here after our wedding day to access more photos! -->

      <!-- <%= link_to 'Download Photos', image_url(""), "data-placement" => "bottom", 'data-toggle' => 'tooltip', class: 'btn btn-primary' %> -->

      <!-- For blueimp gallery -->
      <script>
      document.getElementById('links').onclick = function (event) {
        event = event || window.event;
        var target = event.target || event.srcElement,
          link = target.src ? target.parentNode : target,
          options = {index: link, event: event},
          links = this.getElementsByTagName('a');
        blueimp.Gallery(links, options);
      };
      </script>

      </div>
    </div>
    <div class="row">
    </div>
  </div>
</section>
